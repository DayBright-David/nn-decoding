singularity.enabled = true
mount_dirs_str = "-B $baseDir -B /om -B /om2"
container_dir = "/home/jgauthie/imgs"

process {
    executor = "slurm"
    clusterOptions = '--qos=cpl'
    containerOptions = "${mount_dirs_str}"

    withLabel: 'om.*' {
        time = '1d'
    }

    withLabel: 'om_big' {
        memory = '32 GB'
    }

    withLabel: 'om_gpu.*' {
        time = '1d'
        clusterOptions = '--qos=cpl --gres=gpu:tesla-k80:1'
        containerOptions = "${mount_dirs_str} --nv"
    }

    withLabel: 'om_gpu_tf' {
        container = "file://${container_dir}/tf1.12-gpu.simg"
    }
}

executor {
    $slurm {
        queueSize = 8
    }
}
